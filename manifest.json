{
  "manifest_version": 2,
  "name": "FocusAlchemy",
  "version": "1.0",
  "description": "Maximize focus and productivity with FocusAlchemy's Pomodoro technique",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
